@model ProductVM

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Product</h2>
		</div>
		<div class="row p-1">
			<label asp-for="Product.Title" class="p-0"></label>

			<input asp-for="Product.Title" class="form-control" />
			<span asp-validation-for="Product.Title" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="Product.Description" class="p-0"></label>

			<input asp-for="Product.Description" class="form-control" />
			<span asp-validation-for="Product.Description" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="Product.CreationDate" class="p-0"></label>

			<input asp-for="Product.CreationDate" class="form-control" />
			<span asp-validation-for="Product.CreationDate" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="Product.ImageUrl" class="p-0"></label>

			<input asp-for="Product.ImageUrl" class="form-control" />
			<span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
		</div>

		<div class="row p-1">
			
			<div class="form-group">
				
				<select asp-for="Product.SelectedCategoryId" asp-items="@Model.CategoryList" class="form-control">
					<option disabled selected>Wybierz kategorię</option>
				</select>

				<span asp-validation-for="Product.SelectedCategoryId" class="text-danger"></span>
			</div>

			
		</div>
		


		<div class="row pb-2 mt-4">

			<div class="col-2">
				<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
			</div>

			<div class="col-2">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
					Back to list
				</a>
			</div>

		</div>
	</div>


</form>