@model Product

<form method="post">

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
		</div>
		<div class="row p-1">
			<label asp-for="Title" class="p-0"></label>

			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="Description" class="p-0"></label>

			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="CreationDate" class="p-0"></label>

			<input asp-for="CreationDate" class="form-control" />
			<span asp-validation-for="CreationDate" class="text-danger"></span>
		</div>

		<div class="row p-1">
			<label asp-for="ImageUrl" class="p-0"></label>

			<input asp-for="ImageUrl" class="form-control" />
			<span asp-validation-for="ImageUrl" class="text-danger"></span>
		</div>

		<div class="row pb-2 mt-4">

			<div class="col-2">
				<button typeof="submit" class="btn btn-danger" asp-controller="Product" asp-action="Delete" style="width:150px">Delete</button>
			</div>

			<div class="col-2">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
					Back to list
				</a>
			</div>

		</div>
	</div>


</form>

