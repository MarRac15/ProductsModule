@model Product

<h2 class="pb-4">@Model.Title - Details:</h2>

<dl class="row pb-6">
	<dt class="col-sm-2">Description:</dt>
	<dd class="col-sm-10">@Model.Description</dd>

	<dt class="col-sm-2">Image Url:</dt>
	<dd class="col-sm-10">@Model.ImageUrl</dd>
</dl>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Comment</th>
				<th>Creation Date</th>
			</tr>
		</thead>
		<tbody>
			
			@foreach(var comment in Model.Comments)
			{
				<tr height="50px">
					<td>@comment.Description</td>
					<td>@comment.CreationDate</td>
				</tr>
			}
			
		</tbody>
	</table>

	

	<div class="col-2 p-4 text-end">
		<ul>
			
				<a asp-controller="Comment" asp-action="Create" asp-route-productId="@Model.Id" class="btn btn-primary">
					Add comment
				</a>
			

			
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
					Back to list
				</a>
			
		</ul>
	</div>

	

