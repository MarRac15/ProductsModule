@model Comment

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create new comment</h2>
		</div>
		<div class="row p-1">
			<label asp-for="Description" class="p-0"></label>

			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="row p-1">
			<label asp-for="CreationDate" class="p-0"></label>

			<input asp-for="CreationDate" class="form-control" />
			<span asp-validation-for="CreationDate" class="text-danger"></span>
		</div>

		<div class="row p-1">

			<div class="form-group">

				<select asp-for="ProductId" asp-items="@(ViewData["CommentList"] as IEnumerable<SelectListItem>)" class="form-control">
					<option disabled selected>Który produkt oceniasz?</option>
				</select>

			</div>


		</div>

		<input asp-for="ProductId" type="hidden" />
		<div class="row pb-2 mt-4">

			<div class="col-2">
				<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
			</div>

			<div class="col-2">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
					Back to list
				</a>
			</div>

		</div>
	</div>


</form>

