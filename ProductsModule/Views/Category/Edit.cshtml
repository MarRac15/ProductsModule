@model Category

<form method="post">
	<input asp-for="CategoryId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
		</div>
		<div class="row p-1">
			<label asp-for="Name" class="p-0"></label>

			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>



		<div class="row pb-2 mt-4">

			<div class="col-2">
				<button typeof="submit" class="btn btn-primary" asp-controller="Category" asp-action="Edit" style="width:150px">Update</button>
			</div>

			<div class="col-2">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
					Back to list
				</a>
			</div>

		</div>
	</div>


</form>
